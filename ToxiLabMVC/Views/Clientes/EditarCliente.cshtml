@model ClientesModel
@{
    ViewData["Title"] = "Editar Cliente";
}

<h3>Editar Cliente</h3>
<div class="d-grid d-md-flex justify-content-md-end">
    <button type="submit" asp-controller="Cliente" asp-action="Desativar" class="btn btn-danger">Desativar</button>
</div>

<form asp-controller="ClientesController" asp-action="EditarCliente" class="row g-3" method="post">
    <div class="col-md-10">
        <label for="Nome Completo" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" value="@Model.Nome" class="form-control" id="nome" placeholder="Digite o nome Completo">
    </div>
    
    <div class="col-md-2">
        <label for="Data Nascimento" class="form-label">Data de Nascimento</label>
        <input type="date" asp-for="Nascimento" value="@Model.Nascimento" class="form-control" id="DataNascimento">
    </div>


    <! ENDEREÇO >
    <div class="col-md-2">
        <label for="TipoLogradouro" class="form-label">Tipo Logradouro</label>
        <select asp-for="TipoLogradouro" class="form-select form-control" aria-label="Small select example">
            <option>Selecione tipo logradouro</option>
            @foreach(var x in Model.TiposLogradouros)
            {
                <option value="@x.Value">@x.Name</option>
            }
        </select>
    </div>
    
    <div class="col-md-8">
        <label for="Logradouro" class="form-label">Endereço</label>
        <input type="text" asp-for="Logradouro" value="@Model.Logradouro" class="form-control" name="Logradouro" placeholder="Digite o endereço">
    </div>

    <div class="col-md-2">
        <label for="Numero" class="form-label">Número</label>
        <input type="text" asp-for="Numero" value="@Model.Numero" class="form-control" name="Numero" placeholder="Número">
    </div>


    <div class="col-md-3">
        <label for="Complemento" class="form-label">Complemento</label>
        <input type="text" asp-for="Complemento" value="@Model.Complemento" class="form-control" name="Complemento" placeholder="Complemento">
    </div>
    
    <div class="col-md-2">
        <label for="CEP" class="form-label">CEP</label>
        <input type="text" asp-for="CEP" value="@Model.CEP" name="CEP" class="form-control" name="CEP" placeholder="CEP">
    </div>

    <div class="col-md-7">
        <label for="Bairro" class="form-label">Bairro</label>
        <input type="text" asp-for="Bairro" value="@Model.Bairro" class="form-control" name="Bairro" placeholder="Bairro">
    </div>

   <div class="col-md-5">
       <label for="NumeroCNH" class="form-label">Número CNH</label>
       <input type="text" asp-for="Cnh" value="@Model.Cnh" class="form-control" name="NumeroCNH" placeholder="CNH n.°"/>
   </div>

    <div class="col-md-2">
        <label for="VencimentoCNH" class="form-label">Venc. CNH</label>
        <input type="date" asp-for="VencimentoCnh" value="@Model.VencimentoCnh" class="form-control" name="VencimentoCNH" placeholder="CNH Venc."/>
    </div>

    <div class="col-md-5">
        <label for="CPF" class="form-label">CPF</label>
        <input type="text" asp-for="Cpf" value="@Model.Cpf" class="form-control" name="CPF" placeholder="CPF n.°"/>
    </div>

    <div class="col-md-1">
        <label for="DDD" class="form-label">DDD</label>
        <input type="text" asp-for="DDD" value="@Model.DDD" class="form-control" name="DDD" placeholder="(XX)" />
    </div>
    <div class="col-md-3">
        <label for="WhatsApp" class="form-label">WhatsApp</label>
        <input type="text" asp-for="WhatsApp" value="@Model.WhatsApp" class="form-control" name="WhatsApp" placeholder="Whatsapp" />
    </div>

    <div class="col-md-8">
        <label for="EMail" class="form-label">E-Mail</label>
        <input type="email" asp-for="Email" value="@Model.Email" name="EMail" class="form-control" placeholder="exemplo&#64.com.br" />
    </div>


    <div class="col-md-12">
        <button type="submit" class="btn btn-primary">Atualizar</button>
    </div>

    


</form>     